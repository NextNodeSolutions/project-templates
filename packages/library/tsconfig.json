{
	"extends": "@nextnode/standards/typescript/library",
	"compilerOptions": {
		// TypeScript Paths
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@/types/*": ["./types/*"]
		},

		// Types
		"types": ["node", "vitest/globals"]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.test.ts",
		"src/**/*.spec.ts",
		"types/**/*.ts",
		"*.config.*",
		"eslint.config.mjs",
		"vitest.config.ts"
	],
	"exclude": ["node_modules", "dist"]
}